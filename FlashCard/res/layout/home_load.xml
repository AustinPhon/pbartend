<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/port_bg" android:padding="10sp">


<EditText android:layout_height="wrap_content" android:textColor="#ccc" android:id="@+id/etUserName" android:text="@string/etUserName" android:layout_width="fill_parent" android:layout_marginTop="10sp" android:layout_marginBottom="5sp"></EditText>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:id="@+id/btnUserNameCardSet" 
android:text="@string/btnGetCardSet" 
android:paddingLeft="30sp" android:background="@drawable/button" android:paddingRight="40sp" android:layout_gravity="right"></Button>

<EditText android:layout_height="wrap_content" android:textColor="#ccc" android:id="@+id/etUserName" android:layout_width="fill_parent" android:text="@string/etTerm" android:layout_marginBottom="5sp" android:layout_marginTop="10sp"></EditText>
<Button android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="@string/btnGetCardSet" 
android:paddingLeft="30sp" android:background="@drawable/button" android:paddingRight="40sp" android:layout_gravity="right" android:id="@+id/btnTerm"></Button>


<TableLayout android:id="@+id/TableLayout01" android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="bottom">
<TableRow android:id="@+id/TableRow01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="bottom">
<ImageView android:layout_height="wrap_content" android:background="@drawable/info" android:layout_width="wrap_content" android:layout_marginRight="10sp" android:layout_gravity="center_vertical" android:id="@+id/ivInfo"></ImageView>
<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/poweredby" android:layout_gravity="bottom" android:id="@+id/ivQuizlet"></ImageView>
</TableRow>
</TableLayout>
</LinearLayout>
