<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="15.0sp" android:background="@drawable/picker_bg">
<TableRow android:layout_marginTop="5.0sp">
<ImageView android:id="@+id/ivGlassSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blank"></ImageView>
<TextView android:id="@+id/tvCatSelect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000" android:layout_gravity="left|center_vertical" android:layout_marginLeft="10.0sp" android:textStyle="bold" android:textSize="20sp"></TextView>
</TableRow>
</TableLayout>
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1" 
	android:paddingBottom="10.0sp" 
	android:paddingLeft="10.0sp" 
	android:paddingRight="10.0sp" android:paddingTop="10.0sp"
	android:background="@drawable/spinnerbg">

	    	<ListView android:id="@+id/listGlasses"
	    android:layout_height="fill_parent"
	    android:layout_weight="2" android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:choiceMode="singleChoice" 
	    android:scrollbars="none"
	    android:cacheColorHint="#00000000" android:layout_marginRight="5sp" android:background="#000"></ListView>
	    	<ListView android:id="@+id/listCategories" 
	android:layout_height="fill_parent"
	    android:layout_weight="1" 
	    android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:choiceMode="singleChoice" 
	    android:scrollbars="none"
	    android:cacheColorHint="#00000000" android:background="#000"></ListView>
	    
</LinearLayout>
<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="8.0sp" android:paddingRight="8.0sp" android:paddingBottom="5.0sp" android:background="@drawable/bottom_buttons_bg" android:paddingTop="10.0sp">
	<TableRow>
	 <Button android:layout_height="wrap_content" 
 android:text="@string/btnCancel" 
 android:layout_width="fill_parent" 
 android:layout_gravity="fill_horizontal" android:layout_weight="0" android:id="@+id/btnCancel" android:background="@drawable/button_bg" android:height="20.0sp" android:layout_marginRight="10.0sp" android:paddingLeft="0sp" android:paddingRight="0sp" android:paddingTop="0sp" android:textColor="#fff" android:textStyle="bold" android:paddingBottom="10sp"></Button>
<Button android:layout_height="wrap_content" 
android:text="@string/btnSave"
 android:layout_width="fill_parent" 
 android:layout_gravity="fill_horizontal" android:layout_weight="2" android:id="@+id/btnSave" android:height="20.0sp" android:background="@drawable/button_bg" android:paddingLeft="0sp" android:paddingRight="0sp" android:paddingTop="0sp" android:textColor="#fff" android:textStyle="bold" android:paddingBottom="10sp"></Button>

</TableRow>

</TableLayout>
</LinearLayout>

