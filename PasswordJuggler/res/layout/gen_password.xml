<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:id="@+id/mainLinearLayout"
	android:paddingTop="50sp">
	<TableLayout android:layout_width="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent" android:id="@+id/mainLinearLayout"
		android:background="@drawable/base_bg" android:padding="10sp">
		<TableLayout android:layout_height="wrap_content"
			android:stretchColumns="2" android:layout_width="wrap_content"
			android:background="@drawable/list_item" android:id="@+id/tloutter"
			android:padding="15sp">
			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:gravity="center"
				android:text="password" android:textColor="#000" android:textSize="18sp"
				android:id="@+id/tvGenPassword"></TextView>
			<TextView android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:gravity="center"
				android:textColor="#cc0000" android:text="weak"
				android:layout_margin="10sp" android:id="@+id/tvGenStrength"
				android:textStyle="bold"></TextView>
			<TableRow android:gravity="center_vertical"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:layout_width="wrap_content"
					android:layout_column="0" android:layout_height="wrap_content"
					android:text="4" android:id="@+id/tvLength" android:textColor="#000"
					android:textSize="12sp"></TextView>
				<SeekBar android:layout_height="wrap_content"
					android:layout_column="0" android:layout_span="2"
					android:layout_width="fill_parent" android:keepScreenOn="true"
					android:id="@+id/seekBar" android:layout_marginLeft="10sp"
					android:layout_marginRight="10sp" android:max="25"></SeekBar>
			</TableRow>
		</TableLayout>

		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:background="@drawable/list_item"
			android:gravity="center_vertical" android:padding="10sp"
			android:id="@+id/showPasswords" android:layout_marginTop="10sp">
			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Use Numbers"
				android:textColor="#000" android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp" android:layout_centerVertical="true"></TextView>
			<ToggleButton android:text="@+id/ToggleButton01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/tbUserNumbers" android:layout_alignParentRight="true"
				android:layout_centerInParent="true" android:checked="true"></ToggleButton>
		</RelativeLayout>

		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:background="@drawable/list_item"
			android:gravity="center_vertical" android:padding="10sp"
			android:id="@+id/showPasswords" android:layout_marginTop="10sp">
			<TextView android:id="@+id/TextView01" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Special Characters"
				android:textColor="#000" android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp" android:layout_centerVertical="true"></TextView>
			<ToggleButton android:text="@+id/ToggleButton01"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:id="@+id/tbSpecialChar" android:layout_alignParentRight="true"
				android:layout_centerInParent="false"></ToggleButton>
		</RelativeLayout>
 	
	</TableLayout>

</LinearLayout>
