<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/port_bg"
	android:padding="10sp">


	<EditText android:layout_height="wrap_content"
		android:textColor="#ccc" android:id="@+id/etUserName" android:text="@string/etUserName"
		android:layout_width="fill_parent" android:layout_marginTop="10sp"
		android:layout_marginBottom="5sp" android:imeOptions="actionDone"
		android:inputType="textWebEditText" android:focusable="false"></EditText>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/btnUserNameCardSet"
		android:text="@string/btnGetCardSet" android:paddingLeft="30sp"
		android:background="@drawable/button" android:paddingRight="40sp"
		android:layout_gravity="right" android:paddingTop="0sp" android:paddingBottom="8sp" android:textStyle="bold" android:textColor="#42493f"></Button>

	<EditText android:layout_height="wrap_content"
		android:textColor="#ccc" android:layout_width="fill_parent"
		android:text="@string/etTerm" android:layout_marginBottom="5sp"
		android:layout_marginTop="10sp" android:id="@+id/etTerm"
		android:inputType="textWebEditText" android:imeOptions="actionDone" android:focusable="false"></EditText>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/btnGetCardSet"
		android:paddingLeft="30sp" android:background="@drawable/button"
		android:paddingRight="40sp" android:layout_gravity="right" android:id="@+id/btnTerm"
		android:paddingTop="0sp" android:paddingBottom="8sp" android:textStyle="bold" android:textColor="#42493f"></Button>


	<RelativeLayout android:id="@+id/bottomInfo"
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="left|bottom">
		<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/poweredby"
				android:id="@+id/ivQuizlet" android:layout_marginTop="5sp"></ImageView>
			<ImageView android:layout_height="wrap_content"
				android:background="@drawable/info" android:id="@+id/ivInfo" android:layout_marginRight="0sp" android:layout_marginLeft="20sp" android:layout_alignParentRight="true" android:layout_width="wrap_content" android:layout_marginBottom="5sp"></ImageView>
			
	</RelativeLayout>
</LinearLayout>
