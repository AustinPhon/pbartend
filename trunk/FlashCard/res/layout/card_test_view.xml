<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingTop="22.0sp">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/land_bg">

		<ViewFlipper android:id="@+id/details"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:paddingTop="12sp" android:paddingLeft="8sp">
			
			<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/flashcardfront"
				android:id="@+id/layoutfront">

				<ImageView android:id="@+id/ImageView1"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="20sp" android:background="@drawable/correct" android:layout_marginTop="8sp"></ImageView>
				<TextView android:id="@+id/tvflashCard1" android:textColor="#000"
					android:paddingLeft="20sp"
					android:paddingRight="20sp" android:layout_height="fill_parent"
					android:layout_width="fill_parent" android:paddingTop="15sp"></TextView>
				</LinearLayout>
				
				<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/flashcardfront"
				android:id="@+id/layoutfront">

				<ImageView android:id="@+id/ImageView2"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/correct" android:layout_marginTop="8sp"
					android:layout_marginLeft="20sp"></ImageView>
				<TextView android:id="@+id/tvflashCard2" android:textColor="#000"
					android:paddingLeft="20sp"
					android:paddingRight="20sp" android:layout_height="fill_parent"
					android:layout_width="fill_parent" android:paddingTop="15sp"></TextView>
				</LinearLayout>
				
				<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/flashcardback"
				android:id="@+id/layoutfront">

				<ImageView android:id="@+id/ImageView2"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:background="@drawable/correct" android:layout_marginTop="8sp"
					android:layout_marginLeft="20sp"></ImageView>
				<TextView android:id="@+id/tvflashCard2" android:textColor="#000"
					android:paddingLeft="20sp"
					android:paddingRight="20sp" android:layout_height="fill_parent"
					android:layout_width="fill_parent" android:paddingTop="15sp"></TextView>
				</LinearLayout>
				
		</ViewFlipper>
	</LinearLayout>
</LinearLayout>