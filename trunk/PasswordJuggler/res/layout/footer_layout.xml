<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:background="@drawable/footer_nav" android:id="@+id/rlFooter"
	android:layout_gravity="bottom">
	<Button android:id="@+id/bHome" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/home"></Button>
	<Button android:id="@+id/bSettings" android:layout_height="wrap_content" android:layout_toRightOf="@+id/bHome"
		android:background="@drawable/settings_off" android:layout_width="wrap_content"></Button>
	<Button android:id="@+id/bWallet" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toLeftOf="@+id/bPasswords"
		android:background="@drawable/wallet_off"></Button>
	<Button android:layout_width="wrap_content" android:id="@+id/bPasswords"
		android:layout_height="wrap_content" android:layout_toLeftOf="@+id/bLogins"
		android:background="@drawable/passwords_off"></Button>
	<Button android:id="@+id/bLogins" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toLeftOf="@+id/bNotes"
		android:background="@drawable/logins_off"></Button>
	<Button android:id="@+id/bNotes" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/notes_off"
		android:layout_toLeftOf="@+id/anchor"></Button>
	<Button android:id="@+id/anchor"
		android:layout_alignParentRight="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/footer_anchor">
	</Button>
</RelativeLayout>
