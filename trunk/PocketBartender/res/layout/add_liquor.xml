<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:paddingLeft="5.0sp"
		android:background="@drawable/picker_bg" android:paddingRight="5.0sp" android:paddingTop="8.0sp">
			<EditText android:layout_height="wrap_content"
			android:textColor="#ccc" android:layout_width="fill_parent"
			android:layout_marginLeft="0.0sp" android:layout_marginTop="0sp"
			android:id="@+id/etNewLiquorNm" android:text="@string/newLiquorName"></EditText>
	</TableLayout>
	<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="center_horizontal" android:paddingRight="5sp" android:paddingTop="5sp" android:paddingLeft="15sp" android:background="@drawable/sub_banner" android:id="@+id/tvLiquorType" android:text="@string/newLiquorTypeAdded" android:textColor="#fff" android:textStyle="bold"></TextView><LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1" android:paddingBottom="10.0sp"
		android:paddingLeft="10.0sp" android:paddingRight="10.0sp"
		android:paddingTop="10.0sp" android:background="@drawable/spinnerbg">

		<ListView android:id="@+id/listBaseLiquors"
			android:layout_height="fill_parent"
			android:layout_gravity="fill_vertical" android:layout_width="fill_parent"
			android:fadingEdge="vertical" android:fadingEdgeLength="50.0sp"
			android:choiceMode="singleChoice" android:scrollbars="none"
			android:cacheColorHint="#00000000" android:layout_marginRight="0sp"
			android:background="#000"></ListView>

	</LinearLayout>
	<TableLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:paddingLeft="8.0sp"
		android:paddingRight="8.0sp" android:paddingBottom="5.0sp"
		android:background="@drawable/bottom_buttons_bg" android:paddingTop="10.0sp">
		<TableRow>
			<Button android:layout_height="wrap_content" android:text="@string/btnCancel"
				android:layout_width="fill_parent" android:layout_gravity="fill_horizontal"
				android:layout_weight="0" android:id="@+id/btnCancel"
				android:background="@drawable/button_bg" android:height="20.0sp"
				android:layout_marginRight="10.0sp" android:paddingLeft="0sp"
				android:paddingRight="0sp" android:paddingTop="0sp"
				android:textColor="#fff" android:textStyle="bold"
				android:paddingBottom="10sp"></Button>
			<Button android:layout_height="wrap_content" android:text="@string/btnSave"
				android:layout_width="fill_parent" android:layout_gravity="fill_horizontal"
				android:layout_weight="2" android:id="@+id/btnSave" android:height="20.0sp"
				android:background="@drawable/button_bg" android:paddingLeft="0sp"
				android:paddingRight="0sp" android:paddingTop="0sp"
				android:textColor="#fff" android:textStyle="bold"
				android:paddingBottom="10sp"></Button>

		</TableRow>

	</TableLayout>

</LinearLayout>


