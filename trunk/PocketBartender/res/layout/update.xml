<ScrollView android:id="@+id/ScrollView01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingBottom="10.0sp" android:paddingLeft="10.0sp"
	android:paddingTop="10.0sp" android:background="@drawable/new_bg">
	<TableLayout android:id="@+id/TableLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingRight="10.0sp">
		<EditText android:id="@+id/etNewDrinkNm"
			android:layout_height="wrap_content" android:textColor="#ccc"
			android:text="@string/create_drink_title"
			android:layout_width="fill_parent"
			android:layout_marginLeft="0.0sp" android:layout_marginTop="0sp"></EditText>
		<TextView android:id="@+id/tvNewCategory"
			android:layout_height="wrap_content" android:textColor="#fff"
			android:layout_marginTop="10sp" android:textSize="18sp"
			android:layout_gravity="center_vertical" android:textStyle="bold"
			android:layout_width="fill_parent" android:gravity="left|center_vertical" 
			android:text="@string/newCat" android:drawableLeft="@drawable/glasstemplate" 
			android:background="@drawable/add_bg" android:padding="6sp"></TextView>
			<TextView android:id="@+id/tvDeleteInstructions" android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:text="@string/delete"
				android:textColor="#fff" android:textSize="12sp" android:layout_marginBottom="3sp"></TextView>
		<TableLayout android:id="@+id/lling" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginBottom="5sp">
		</TableLayout>
		<TextView android:id="@+id/tvNewIngredients"
			android:layout_height="wrap_content" android:textColor="#fff"
			android:textSize="16sp" android:textStyle="bold"
			android:layout_width="fill_parent"
			android:layout_gravity="fill_horizontal" android:text="@string/newIng" 
			android:layout_marginBottom="10sp" android:background="@drawable/add_bg"
			 android:gravity="center_vertical" android:drawableLeft="@drawable/add"></TextView>

		<EditText android:id="@+id/etDirections" android:textColor="#ccc"
			android:layout_height="fill_parent" android:text="@string/instructionsText"
			android:layout_width="fill_parent"></EditText>
		<TableRow>
			<!-- Button android:id="@+id/btnNewCat" android:layout_height="wrap_content"
				android:text="@string/categoryText" android:layout_gravity="left"
				android:height="20.0sp" android:layout_width="wrap_content"
				android:layout_weight="2" android:paddingTop="0sp"
				android:background="@drawable/wht_button_bg" android:paddingLeft="40sp"
				android:paddingRight="10sp" android:paddingBottom="5sp"
				android:textSize="13sp"></Button>

			<Button android:layout_height="wrap_content" android:text="@string/ingredientsText"
				android:id="@+id/btnNewIng" android:height="20.0sp"
				android:layout_width="wrap_content" android:layout_weight="1"
				android:layout_gravity="right" android:paddingTop="0sp"
				android:background="@drawable/wht_button_bg" android:paddingLeft="40sp"
				android:paddingBottom="5sp" android:paddingRight="15sp"
				android:textSize="13sp"></Button-->
		</TableRow>
		<TableRow>

			<Button android:id="@+id/btnCancel" android:layout_height="wrap_content"
				android:text="@string/btnCancel" android:layout_width="fill_parent"
				android:background="@drawable/button_bg" android:height="20.0sp"
				android:layout_gravity="left" android:layout_weight="1"
				android:layout_marginRight="5.0sp" android:paddingLeft="0sp"
				android:paddingRight="0sp" android:paddingTop="0sp"
				android:textColor="#fff" android:textStyle="bold"
				android:paddingBottom="10sp"></Button>

			<Button android:layout_height="wrap_content" android:text="@string/btnReset"
				android:layout_width="fill_parent" android:id="@+id/btnReset"
				android:background="@drawable/button_bg" android:height="20.0sp"
				android:layout_gravity="left" android:layout_weight="1"
				android:layout_marginRight="5.0sp" android:paddingLeft="0sp"
				android:paddingRight="0sp" android:paddingTop="0sp"
				android:textColor="#fff" android:textStyle="bold"
				android:paddingBottom="10sp"></Button>

			<Button android:layout_height="wrap_content" android:text="@string/btnSave"
				android:layout_width="fill_parent" android:id="@+id/btnSave"
				android:background="@drawable/button_bg" android:height="20.0sp"
				android:layout_gravity="right" android:layout_weight="1"
				android:paddingTop="0sp" android:textColor="#fff" android:textStyle="bold"
				android:paddingBottom="10sp" android:paddingLeft="10sp"
				android:paddingRight="10sp"></Button>

		</TableRow>


	</TableLayout>
</ScrollView>
