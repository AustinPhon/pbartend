<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1" 
	android:paddingBottom="10.0sp" 
	android:paddingLeft="10.0sp" 
	android:paddingRight="10.0sp" android:paddingTop="10.0sp" android:background="@drawable/spinnerbg">
	

	<ListView android:id="@+id/listWholeNums" android:gravity=""
	    android:layout_height="fill_parent"
	    android:layout_weight="2" android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:background="#fff" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:fitsSystemWindows="true" android:layout_marginRight="5.0sp" android:cacheColorHint="#00000000"></ListView>

	<ListView android:id="@+id/listHalfNums" 
	android:layout_height="fill_parent"
	    android:layout_weight="2" 
	    android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:background="#fff" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" android:layout_marginRight="5.0sp" android:cacheColorHint="#00000000"></ListView>
	    
	  <ListView android:id="@+id/listAmounts" android:gravity=""
	    android:layout_height="fill_parent"
	    android:layout_weight="1" android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:background="#fff" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:fitsSystemWindows="true" android:cacheColorHint="#00000000"></ListView>

</LinearLayout>

<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="10.0sp" android:paddingRight="10.0sp" android:paddingTop="5.0sp" android:paddingBottom="5.0sp">
	<TableRow>
<Button android:id="@+id/btnAmountSave" 
android:layout_height="wrap_content" 
android:text="@string/btnSave" 
 android:layout_width="fill_parent" 
 android:layout_weight="1" android:layout_gravity="fill_horizontal"></Button>
 <Button android:id="@+id/btnAmountCancel" 
 android:layout_height="wrap_content" 
 android:text="@string/btnCancel" 
 android:layout_width="fill_parent" 
 android:layout_weight="1" android:layout_gravity="fill_horizontal"></Button>
</TableRow>
</TableLayout>
</LinearLayout>

