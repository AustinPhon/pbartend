<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="15.0sp" android:background="@drawable/picker_bg">
<TableRow android:layout_marginTop="15.0sp">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="left" android:id="@+id/tvWhole" android:textColor="#000" android:textSize="20.0sp" android:textStyle="bold"></TextView>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="left" android:id="@+id/tvHalf" android:textColor="#000" android:textSize="20.0sp" android:textStyle="bold"></TextView>

<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="left" android:id="@+id/tvMeasurement" android:textColor="#000" android:textSize="20.0sp" android:textStyle="bold"></TextView>

</TableRow>
</TableLayout>
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1" 
	android:paddingBottom="10.0sp" 
	android:paddingLeft="10.0sp" 
	android:paddingRight="10.0sp" android:paddingTop="10.0sp" android:background="@drawable/spinnerbg">
	

	<ListView android:id="@+id/listWholeNums" 
	    android:layout_height="fill_parent"
	    android:layout_weight="2" android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:fitsSystemWindows="true" android:scrollbars="none" 
	    android:cacheColorHint="#00000000" android:layout_marginRight="5sp"></ListView>

	<ListView android:id="@+id/listHalfNums" 
	android:layout_height="fill_parent"
	    android:layout_weight="2" 
	    android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp"
	    android:cacheColorHint="#00000000"
	     android:scrollbars="none" android:layout_marginRight="5sp"></ListView>
	    
	  <ListView android:id="@+id/listAmounts" android:gravity=""
	    android:layout_height="fill_parent"
	    android:layout_weight="1" android:layout_gravity="fill_vertical" 
	    android:layout_width="fill_parent" 
	    android:fadingEdge="vertical" 
	    android:fadingEdgeLength="50.0sp" 
	    android:fitsSystemWindows="true" android:cacheColorHint="#00000000"
	    android:scrollbars="none"></ListView>

</LinearLayout>
<TableLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="8.0sp" android:paddingRight="8.0sp" android:paddingBottom="5.0sp" android:background="@drawable/bottom_buttons_bg" android:paddingTop="10.0sp">
	<TableRow>
	 <Button android:layout_height="wrap_content" 
 android:text="@string/btnCancel" 
 android:layout_width="fill_parent" 
 android:layout_gravity="fill_horizontal" android:layout_weight="0" android:id="@+id/btnAmountCancel" android:background="@drawable/button_bg" android:height="20.0sp" android:layout_marginRight="10.0sp" android:paddingLeft="0sp" android:paddingRight="0sp" android:paddingTop="0sp" android:textColor="#fff" android:textStyle="bold" android:paddingBottom="10sp"></Button>
<Button android:layout_height="wrap_content" 
android:text="@string/btnSave"
 android:layout_width="fill_parent" 
 android:layout_gravity="fill_horizontal" android:layout_weight="2" android:id="@+id/btnAmountSave" android:height="20.0sp" android:background="@drawable/button_bg" android:paddingLeft="0sp" android:paddingRight="0sp" android:paddingTop="0sp" android:textColor="#fff" android:textStyle="bold" android:paddingBottom="10sp"></Button>

</TableRow>

</TableLayout>
</LinearLayout>

